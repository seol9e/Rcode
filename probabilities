# Probability of closing > 1 deal out of 3 deals
pbinom(1,3,0.3, lower.tail=TRUE)
[1] 0.784
# Probability of closing > 1 deal out of 3 deals
pbinom(1,3,0.3, lower.tail=FALSE)
[1] 0.216
# Expected number won with 30% win rate
won_30pct <- 3 * 0.3
won_30pct

# Expected number won with 25% win rate
won_25pct <- 3*0.25
won_25pct

